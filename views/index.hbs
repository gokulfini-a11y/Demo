<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="game-container">
        <svg id="game-svg" viewBox="0 0 1000 400" preserveAspectRatio="xMidYMid slice">
            <rect width="1000" height="400" fill="#1a1a1a" />
            <g id="parallax-bg"></g>
            
            <rect x="0" y="350" width="1000" height="50" fill="#333" />
            <line x1="0" y1="350" x2="1000" y2="350" stroke="#00ff00" stroke-width="2" />

            <g id="game-objects"></g>
        </svg>

        <div id="ui">
            <div id="stats">Lines of Code: <span id="score">0</span></div>
            <div id="menu" class="overlay">
                <h1>{{title}}</h1>
                <p>JUMP [Space/Up] | DUCK [Down]</p>
                <button onclick="startGame()">SUDO START</button>
            </div>
            <div id="death-screen" class="overlay hidden">
                <h1 style="color: #555;">CRITICAL_PROCESS_DIED</h1>
                <p id="error-msg"></p>
                <button onclick="startGame()">REBOOT</button>
            </div>
        </div>
    </div>
    <script src="/js/game.js"></script>
</body>
</html>
